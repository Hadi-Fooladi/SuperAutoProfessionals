<UserControl
	x:ClassModifier="internal"
	x:Class="SuperAutoProfessionals.WindowsApp.Controls.TeamControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:controls="clr-namespace:SuperAutoProfessionals.WindowsApp.Controls"
	mc:Ignorable="d"
	d:DesignWidth="600" d:DesignHeight="100">

	<UserControl.Resources>
		<Style TargetType="controls:ProfessionalControl">
			<Setter Property="Width" Value="100" />
			<Setter Property="Height" Value="100" />
		</Style>
	</UserControl.Resources>

	<Viewbox>
		<UniformGrid Name="_grid" Columns="5" Width="550">
			<controls:ProfessionalControl />
			<controls:ProfessionalControl />
			<controls:ProfessionalControl />
			<controls:ProfessionalControl />
			<controls:ProfessionalControl />
		</UniformGrid>
	</Viewbox>
</UserControl>
